@model LittleBlog.Web.Models.Article

@{
    ViewData["Title"] = Model.Title;
}

<div class="row">
    <div class="col-sm-8">
        <h1>@Model.Title</h1>
        <p>@Model.Author - @Model.CreateTime.ToString("yyyy-MM-dd HH:mm:ss")</p>

        <hr />
        <div class="article">
            @Html.Raw(Model.Content)
        </div>
    </div>
    <div class="col-sm-4">
        @await Component.InvokeAsync("Sidebar")
    </div>
</div>