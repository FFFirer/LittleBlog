@using LittleBlog.Web.Models.ViewModels
@model LittleBlog.Web.Models.ViewModels.PageListViewModel

<ul class="pagination">
    <li class="@Model.Items[0].ClassName"><a href="@Url.Action(Model.ActionName, new { page = Model.Items[0].TargetPage })">@Model.Items[0].InnerHtml</a></li>
    <li class="@Model.Items[1].ClassName"><a href="@Url.Action(Model.ActionName, new { page = Model.Items[1].TargetPage })">@Model.Items[1].InnerHtml</a></li>
    <li><span>第 @Model.pageInfo.CurrentPage 页,共 @Model.pageInfo.PageCount 页</span></li>
    <li class="@Model.Items[2].ClassName"><a href="@Url.Action(Model.ActionName, new { page = Model.Items[2].TargetPage })">@Model.Items[2].InnerHtml</a></li>
    <li class="@Model.Items[3].ClassName"><a href="@Url.Action(Model.ActionName, new { page = Model.Items[3].TargetPage })">@Model.Items[3].InnerHtml</a></li>
</ul>