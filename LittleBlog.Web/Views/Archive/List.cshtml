@model LittleBlog.Web.Models.ViewModels.Archive.ArchiveListViewModel

@{
    ViewData["Title"] = "Archive List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-8">
        @foreach (var article in Model.Articles)
        {
            <div class="card">
                <div class="card-body">
                    <a asp-area="" asp-controller="Article" asp-action="Index" asp-route-id="@article.Id">
                        <h4 class="card-title">
                            @article.Title
                        </h4>
                    </a>
                    <p class="card-text">
                        @article?.Abstract
                    </p>
                </div>
            </div>
            <br />
        }
    </div>
    <div class="col-sm-4">
        @await Component.InvokeAsync("Sidebar")
    </div>
</div>
