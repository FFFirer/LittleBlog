@page "{id:int}"
@model LittleBlog.Web.Pages.ArticleModel
@{
    ViewData["Title"] = Model.Article.Title;
}

@section Styles {
    @if(Model.Article.UseMarkdown){
        <link rel="stylesheet" href="@Model.MdTheme.CodeBlockStyleUrl" />
        <link rel="stylesheet" href="@Model.MdTheme.MarkdownStyleUrl" />
    }    
}

<div>
    <p class="h1">
        @Model.Article.Title
    </p>
    <hr />
    <p>
        <span class="text-muted">
            @Model.Article.Author
        </span>
        <span class="text-muted">
            @Model.Article.LastEditTime.ToString("yyyy-MM-dd")
        </span>
    </p>
</div>

@if (Model.Article.UseMarkdown)
{
<div class="markdown-preview">
    @Html.Raw(Model.Article.Content)
</div>
}
else{
<div>
    @Html.Raw(Model.Article.Content)
</div>
}